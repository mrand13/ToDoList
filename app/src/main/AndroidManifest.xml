<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.therewillbebugs.todolist" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/tusk_list_logo"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".SignupActivity" android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".WelcomeActivity" android:theme="@style/MyMaterialTheme"/>
        <activity android:name=".TaskActivity" android:theme="@style/MyMaterialTheme"/>
    </application>

</manifest>
